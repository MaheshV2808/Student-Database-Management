<!DOCTYPE html>
<html>

<head>
    <title></title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <% students.forEach(function(student){ %>
            <form method="POST" , action="/update" autocomplete="off">
                <div class="form-group">
                    <label><b>Student Name</b></label>
                    <input type="text" name="name" class="form-control" value = "<%= student.Name%>">
                </div>
                
                <div class="form-group">
                    <label><b>Standard</b></label>
                    <input type="text" name="standard" class="form-control"value = "<%= student.Standard%>">
                </div>
                <div class="form-group">
                    <label><b>Score</b></label>
                    <input type="text" name="score" class="form-control"value = "<%= student.Score%>">
                </div>
                <div class="form-group">
                    <label><b>Mobile Number</b></label>
                    <input type="text" name="mobileNo" class="form-control"value = "<%= student.MobileNo%>">
                </div>
                <div class="form-group">
                    <label><b>Email</b></label>
                    <input type="email" name="email" class="form-control"value = "<%= student.EmailAddress%>">
                </div>
                <div class="form-group">
                    <label><b>Address</b></label>
                    <input type="text" name="address" class="form-control"value = "<%= student.Address%>">
                </div>
                <button class="w-100 btn btn-lg btn-success" type="submit">Update</button>
            </form>
            <% }) %>
    </div>

</body>

</html>